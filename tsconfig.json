{
	"compilerOptions": {
        "outDir": "./",
        "rootDir": "./src",
		"target": "es5",
		"module": "system",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"removeComments": false,
		"noImplicitAny": false,
		"watch": true
	},
	"exclude": [
		"node_modules"
	]
}