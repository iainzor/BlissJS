{
	"compilerOptions": {
		"outDir": "./public",
		"target": "es5",
		"module": "system",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"removeComments": false,
		"noImplicitAny": false,
		"watch": true
	},
	"exclude": [
		"public",
		"public_src/node_modules"
	]
}